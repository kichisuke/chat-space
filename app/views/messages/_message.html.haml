.message{data: {message_id: "#{message.id}"}}
  .upper-info
    %p.upper-info__user
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d(#{%w(Sun Mon Tue Wed Thu Fri Sat)[Time.now.wday]}) %H:%M")
  - if message.content.present?
    %p.message__text
      = message.content
  = image_tag message.image.url if message.image.present? 
  