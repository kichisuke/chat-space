.flash-box
  .flash-box
    グループを作成しました
.wrapper
  .chat-side
    .side-header
      %p.side-header__user-name
        test-user
      %ul.user-menu
        %li.user-menu__edit-user
          = link_to 'users/edit' do
            %i.fa.fa-edit
        %li.user-menu__new-group
          = link_to 'http://google.co.jp' do
            %i.fa.fa-cog
    .groups
      %a
        .group
          .group__group-name
            test-group
          .group__latest-message
            さようなら
      %a
        .group
          .group__group-name
            sample-group
          .group__latest-message
            hello!
      %a
        .group
          .group__group-name
            example
          .group__latest-message
            まだメッセージがありません
.chat-main
  .main-header
    .current-group
      %h2.current-group__name
        test-group
      %ul.member-list
        Member：
        %li.member-list__member
          - @group.users.each do |user|
            = user.name
    %a
      .main-header__edit-btn Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'image-label' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'image-label__input'
      = f.submit 'Send', class: 'new_message__submit-btn' 
      