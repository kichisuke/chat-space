.chat-main
  .main-header
    .current-group
      %h2.current-group__name
        test-group
      %ul.member-list
        Member：
        %li.member-list__member
          test-user
    %a
      .main-header__edit-btn Edit
.messages
  .message
    .upper-info
      %p.upper-info__user test-user
      %p.upper-info__date 2019/03/13(Web) 17:50:36
